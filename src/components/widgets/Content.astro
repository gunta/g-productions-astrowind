---
import type { Content as Props } from '~/types';
import Headline from '../ui/Headline.astro';
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '../ui/ItemGrid.astro';
import GeometricBackground from '../ui/GeometricBackground.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction,
  items = [],
  columns,
  image = await Astro.slots.render('image'),
  isReversed = false,
  isAfterContent = false,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  {/* Optional headline at top */}
  {(title || subtitle) && !content && (
    <Headline
      title={title}
      subtitle={subtitle}
      tagline={tagline}
      classes={{
        container: 'max-w-xl sm:mx-auto lg:max-w-2xl mb-12',
        title: 'font-display font-semibold text-3xl md:text-4xl tracking-tight text-ink dark:text-white',
        subtitle: 'max-w-3xl mx-auto text-lg text-ink-secondary dark:text-zinc-400',
      }}
    />
  )}
  
  <div class="mx-auto max-w-7xl px-4 md:px-8">
    {/* Asymmetric grid layout */}
    <div class={`grid lg:grid-cols-12 gap-8 lg:gap-16 items-center ${isReversed ? 'lg:[direction:rtl]' : ''}`}>
      
      {/* Content column - 7 cols */}
      <div class="lg:col-span-7 lg:[direction:ltr]">
        {/* Inline title if content exists */}
        {title && content && (
          <div class="mb-8">
            {tagline && (
              <span class="inline-flex items-center gap-2 text-sm font-semibold tracking-wide uppercase text-accent mb-3">
                <span class="w-6 h-px bg-accent"></span>
                {tagline}
              </span>
            )}
            <h2 class="font-display font-semibold text-3xl md:text-4xl tracking-tight text-ink dark:text-white">
              {title}
            </h2>
            {subtitle && (
              <p class="mt-3 text-lg text-ink-secondary dark:text-zinc-400">{subtitle}</p>
            )}
          </div>
        )}
        
        {/* Main content - improved prose styling */}
        {content && (
          <div 
            class="prose prose-lg prose-zinc dark:prose-invert max-w-none
                   prose-headings:font-heading prose-headings:font-semibold prose-headings:tracking-tight
                   prose-h3:text-xl prose-h3:mt-6 prose-h3:mb-3
                   prose-p:text-ink-secondary prose-p:dark:text-zinc-400 prose-p:leading-relaxed
                   prose-strong:text-ink prose-strong:dark:text-white
                   prose-a:text-accent prose-a:no-underline hover:prose-a:underline
                   [&_blockquote]:border-l-accent [&_blockquote]:bg-surface-alt [&_blockquote]:dark:bg-zinc-800/50 
                   [&_blockquote]:rounded-r-xl [&_blockquote]:py-4 [&_blockquote]:px-6 [&_blockquote]:not-italic
                   [&_blockquote]:text-ink-secondary [&_blockquote]:dark:text-zinc-300
                   mb-8"
            set:html={content} 
          />
        )}

        {/* CTA */}
        {callToAction && (
          <div class="mb-8">
            <Button variant="link" class="text-accent font-semibold group" {...callToAction}>
              <span>{callToAction.text}</span>
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </Button>
          </div>
        )}

        {/* Item grid with modern styling */}
        {items.length > 0 && (
          <ItemGrid
            items={items}
            columns={columns}
            defaultIcon="tabler:check"
            classes={{
              container: 'gap-y-5 md:gap-y-6',
              panel: 'max-w-none',
              title: 'text-base font-semibold text-ink dark:text-white ml-3',
              description: 'text-ink-secondary dark:text-zinc-400 ml-3 mt-1',
              icon: 'flex h-6 w-6 items-center justify-center rounded-lg bg-accent/10 text-accent flex-shrink-0',
              action: 'text-base font-medium text-ink dark:text-white ml-3',
            }}
          />
        )}
      </div>
      
      {/* Image column - 5 cols with overlap effect */}
      <div class="lg:col-span-5 lg:[direction:ltr] relative">
        {image && (
          <div class="relative">
            {/* Background accent shape */}
            <div 
              class={`absolute -inset-4 rounded-3xl bg-gradient-to-br opacity-50 blur-2xl
                ${isReversed 
                  ? 'from-geometric-orange/30 to-accent/20' 
                  : 'from-accent/30 to-geometric-violet/20'
                }`}
            ></div>
            
            {/* Image container */}
            <div class="relative">
              {/* Corner accents */}
              <div class={`absolute -top-3 ${isReversed ? '-right-3' : '-left-3'} w-10 h-10 border-t-2 ${isReversed ? 'border-r-2 rounded-tr-xl' : 'border-l-2 rounded-tl-xl'} border-accent/30`}></div>
              <div class={`absolute -bottom-3 ${isReversed ? '-left-3' : '-right-3'} w-10 h-10 border-b-2 ${isReversed ? 'border-l-2 rounded-bl-xl' : 'border-r-2 rounded-br-xl'} border-geometric-orange/30`}></div>
              
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="relative w-full rounded-2xl shadow-elegant-xl object-cover"
                  width={600}
                  height={500}
                  widths={[400, 600, 800]}
                  sizes="(max-width: 768px) 100vw, 40vw"
                  layout="responsive"
                  {...image}
                />
              )}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</WidgetWrapper>
