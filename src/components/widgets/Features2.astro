---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import ItemGrid2 from '~/components/ui/ItemGrid2.astro';
import GeometricBackground from '~/components/ui/GeometricBackground.astro';
import type { Features as Props } from '~/types';

interface ExtendedProps extends Props {
  variant?: 'default' | 'bento';
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 3,
  defaultIcon,
  variant = 'default',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props as ExtendedProps;
---

<WidgetWrapper 
  id={id} 
  isDark={isDark} 
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} 
  bg={bg}
>
  {/* Subtle background */}
  <GeometricBackground variant="section" />
  
  <div class="relative">
    <Headline 
      title={title} 
      subtitle={subtitle} 
      tagline={tagline} 
      classes={{
        container: 'mb-10 md:mb-14',
        title: 'font-display font-semibold text-3xl md:text-4xl text-ink dark:text-white tracking-tight',
        subtitle: 'text-lg text-ink-secondary dark:text-zinc-400 max-w-3xl mx-auto',
        ...((classes?.headline as Record<string, string>) ?? {}),
      }}
    />
    
    <ItemGrid2
      items={items}
      columns={columns}
      defaultIcon={defaultIcon}
      variant={variant}
      classes={{
        container: 'gap-5 md:gap-6',
        icon: 'text-accent',
        ...((classes?.items as Record<string, string>) ?? {}),
      }}
    />
  </div>
</WidgetWrapper>
