---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Timeline from '~/components/ui/Timeline.astro';
import Headline from '~/components/ui/Headline.astro';
import Image from '~/components/common/Image.astro';
import type { Steps as Props } from '~/types';

// 型定義を拡張
interface TimelineItem {
  title: string;
  description?: string;
  icon?: string;
  classes?: Record<string, string>;
  link?: string;
}

type ClassesRecord = Record<string, string>;

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [] as TimelineItem[],
  image = await Astro.slots.render('image'),
  isReversed = false,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''}`} bg={bg}>
  <div class:list={['flex flex-col gap-8 md:gap-12', { 'md:flex-row-reverse': isReversed }, { 'md:flex-row': image }]}>
    <div class:list={['md:py-4 md:self-center', { 'md:basis-1/2': image }, { 'w-full': !image }]}>
      <Headline
        title={title}
        subtitle={subtitle}
        tagline={tagline}
        classes={{
          container: 'text-left rtl:text-right mb-8',
          title: 'font-display font-semibold text-3xl lg:text-4xl text-ink dark:text-white tracking-tight',
          subtitle: 'text-ink-secondary dark:text-zinc-400',
          ...((classes?.headline as object) ?? {}),
        }}
      />
      <Timeline 
        items={items} 
        classes={{
          container: 'space-y-6',
          panel: 'relative pl-8 before:absolute before:left-3 before:top-10 before:bottom-0 before:w-px before:bg-zinc-200 dark:before:bg-zinc-700 last:before:hidden',
          title: 'font-heading font-semibold text-lg text-ink dark:text-white',
          description: 'text-ink-secondary dark:text-zinc-400 mt-1',
          icon: 'absolute left-0 top-1 w-6 h-6 rounded-lg bg-accent/10 text-accent flex items-center justify-center',
          ...((classes?.items as ClassesRecord) ?? {}),
        }} 
      />
    </div>
    {
      image && (
        <div class="relative md:basis-1/2">
          {typeof image === 'string' ? (
            <Fragment set:html={image} />
          ) : (
            <Image
              class="inset-0 object-cover object-top w-full rounded-2xl shadow-elegant-lg md:absolute md:h-full bg-surface-alt dark:bg-zinc-800"
              widths={[400, 768]}
              sizes="(max-width: 768px) 100vw, 432px"
              width={432}
              height={768}
              layout="cover"
              src={image?.src}
              alt={image?.alt || ''}
            />
          )}
        </div>
      )
    }
  </div>
</WidgetWrapper>
