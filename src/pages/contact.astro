---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'お問い合わせ',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText tagline="お問い合わせ" title="つながりましょう！" />
  <ContactUs
    id="form"
    title="今日メッセージをお送りください！"
    subtitle="お手伝いします。"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: '名前',
      },
      {
        type: 'email',
        name: 'email',
        label: 'メールアドレス',
      },
    ]}
    textarea={{
      label: 'メッセージ',
    }}
    disclaimer={{
      label: 'このお問い合わせフォームを送信することにより、あなたは個人情報の収集に同意したことになります。',
    }}
    description="通常24営業時間以内に返信します。"
  />
</Layout>
