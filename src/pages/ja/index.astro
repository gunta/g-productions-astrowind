  <Hero
    id="home"
    title="G Productions Japan"
    tagline="AIと技術顧問で、ビジネスの未来を創造する"
    image={{
      src: '~/assets/images/hero-1.png',
      alt: 'G Productions Japan 合同会社',
    }}
    actions={[
      {
        variant: 'primary',
        text: 'サービス詳細へ',
        href: '/ja#services',
        target: '_self',
