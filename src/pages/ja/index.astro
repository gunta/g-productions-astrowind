<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'ホーム', href: '/ja#home' },
        { text: 'サービス', href: '/ja#services' },
        { text: '自社サービス', href: '/ja#jigyou' },
        { text: '選ばれる理由', href: '/ja#why-us' },
        { text: '導入事例', href: '/ja#jirei' },
        { text: '会社概要', href: '/ja#company' },
        { text: 'アクセス', href: '/ja#access' },
        { text: 'お問い合わせ', href: '/ja#contact' },
      ]}
      actions={[
        {
          text: 'アメリカ (US)',
          href: '/en',
          target: '_self',
        },
      ]}
      isSticky
      showToggleTheme
    >
      <LogoJapan slot="logo" />
