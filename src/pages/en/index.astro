---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro'; // For portfolio/case studies
import Features from '~/components/widgets/Features.astro'; // Using Features (or Features2) for portfolio
import Stats from '~/components/widgets/Stats.astro'; // Import Stats for Why Choose Us
// import { getPermalink } from '~/utils/permalinks';

// Metadata for USA company
const metadata = {
  title: 'G Productions: Global AI Innovation Studio | AI, Software & Global Services',
  description:
    'G Productions, LLC (USA) is a premier AI innovation studio delivering cutting-edge AI solutions, bespoke software development, and expert global services worldwide. Drive your business forward.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '/en#home' },
        { text: 'Services', href: '/en#services' },
        { text: 'Why Us?', href: '/en#why-us' },
        { text: 'Portfolio', href: '/en#portfolio' },
        { text: 'About', href: '/en#about' },
        { text: 'Contact', href: '/en#contact' },
      ]}
      actions={[
        {
          // Link to the Japanese site
          text: 'Japan (日本)',
          href: '/ja',
          target: '_self',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Section (#home) -->
  <Hero
    id="home"
    title="G Productions, LLC"
    tagline="Your Global AI Innovation Partner"
    image={{
      src: '~/assets/images/hero-1.png', // Global/tech-focused hero image
      alt: 'G Productions, LLC - Global AI Innovation',
    }}
    actions={[
      {
        variant: 'primary',
        text: 'Explore Solutions',
        href: '/en#services',
        target: '_self',
      },
      {
        variant: 'secondary',
        text: 'Get In Touch',
        href: '/en#contact',
        target: '_self',
      },
    ]}
  >
    <Fragment slot="subtitle">
      We build the future, globally. Powered by AI.<br />
      <span class="font-semibold">G Productions, LLC (USA)</span> leverages cutting-edge technology and creative solutions
      to drive worldwide impact and accelerate your success.
    </Fragment>
  </Hero>

  <!-- Services Section (#services) -->
  <Features2
    id="services"
    title="Our Global AI & Technology Solutions"
    subtitle="Empowering businesses worldwide with innovative, tailored services"
    columns={4}
    defaultIcon="tabler:rocket"
    items={[
      {
        title: 'AI Solutions & Consulting',
        description: `<ul>
          <li>Bespoke AI Agent Development</li>
          <li>AI Workflow Design & Automation</li>
          <li>Strategic AI Implementation Consulting</li>
          <li>AI-Powered Content & Design Generation</li>
          <li>Unlock efficiency and competitive advantage.</li>
        </ul>`,
        icon: 'tabler:brain',
      },
      {
        title: 'Custom Software Development',
        description: `<ul>
          <li>Full-Stack Web & Application Development</li>
          <li>Scalable SaaS Product Engineering</li>
          <li>Advanced Chatbot & Conversational AI</li>
          <li>Modern Tech Stack (React, Node, Python, Cloudflare)</li>
          <li>Robust, reliable, and future-proof solutions.</li>
        </ul>`,
        icon: 'tabler:code',
      },
      {
        title: 'Global Business Services',
        description: `<ul>
          <li>Expert Translation & Localization (JP<>EN+)</li>
          <li>Professional Interpretation Services</li>
          <li>Cross-Border Market Entry Strategy</li>
          <li>Inbound/Outbound Business Consulting</li>
          <li>Navigate global markets with confidence.</li>
        </ul>`,
        icon: 'tabler:world-share',
      },
      {
        title: 'Hybrid Event Design (Gathrly)',
        description: `<ul>
          <li>Innovative Hybrid & Virtual Event Concepts</li>
          <li>AI-Powered Event Planning & Logistics</li>
          <li>Engaging Experiences for Global Audiences</li>
          <li>Technology Integration & Support</li>
          <li>Leveraging insights from Gathr.ly.</li>
        </ul>`,
        icon: 'tabler:calendar-event',
      },
      // Optional: Creative Services
      // {
      //   title: 'Creative Services',
      //   description: `<ul>
      //     <li>Music Production & Distribution</li>
      //     <li>Event Production (Gathrly Concept)</li>
      //     <li>Video Production & Editing</li>
      //   </ul>`,
      //   icon: 'tabler:creative-commons',
      // },
    ]}
  />

  <!-- Why Choose Us Section (#why-us) -->
  <Stats
    id="why-us"
    title="Why Partner with G Productions?"
    subtitle="Your strategic advantage in a global, AI-driven world."
    stats={[
      { title: 'Global Perspective', amount: 'AI & Tech' },
      { title: 'AI-First Approach', amount: 'Innovation' },
      { title: 'Dual Expertise', amount: 'US & Japan' },
      { title: 'Proven Results', amount: 'Portfolio' },
    ]}
  />

  <!-- Portfolio / Case Studies Section (#portfolio) -->
  <Features
    id="portfolio"
    title="Innovating Across Borders: Our Work"
    subtitle="Selected projects showcasing our global capabilities and technological expertise"
    items={[
      // Example Case Study Item 1
      {
        title: 'AI Code Agents Festival (Hybrid Event Production)',
        description:
          'Successfully produced a large-scale hybrid tech conference connecting a global audience (200+ in-person, 20k+ online), demonstrating expertise in complex event logistics and community engagement.',
        icon: 'tabler:calendar-event', // Or 'tabler:robot'
        callToAction: {
          text: 'View Event Details',
          href: 'https://events.code-agents.com/2025-winter/',
          target: '_blank',
          variant: 'link',
        },
      },
      // Example Case Study Item 2
      {
        title: 'Multinational Tech Localization (Global Services)',
        description:
          'Executed end-to-end localization for a major software product launch in Japan, including technical translation, cultural consulting, and QA, ensuring seamless market entry.',
        icon: 'tabler:language',
      },
      // Example Case Study Item 3
      {
        title: 'E-commerce AI Agent (AI Solutions)',
        description:
          'Developed and deployed a sophisticated AI agent for a US retailer, automating 60%+ of customer support queries and increasing conversion rates through personalized recommendations.',
        icon: 'tabler:robot',
      },
      // Example Case Study Item 4
      {
        title: 'Cross-Platform SaaS Application (Software Dev)',
        description:
          'Engineered a scalable SaaS platform for a B2B client, featuring a modern web interface and mobile companion apps, deployed globally on Cloudflare infrastructure.',
        icon: 'tabler:cloud-code',
      },
      // Add more portfolio items here
    ]}
  />

  <!-- Global Presence / About Section (#about) -->
  <Content
    id="about"
    title="Global Reach, Integrated Expertise"
    isReversed
    image={{
      src: '~/assets/images/office-02.jpeg', // Global team/office image
      alt: 'G Productions, LLC - Global Operations',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">
        Our Foundation (G Productions, LLC)
      </h3>
      <p class="mb-4 text-lg">
        Founded in Wyoming, USA, G Productions, LLC is the global engine driving our innovation. We operate as a dynamic
        AI studio, committed to merging advanced technology with creative excellence to solve complex challenges across
        international markets. Our AI-first methodology ensures we deliver future-ready solutions.
      </p>
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">The Power of Synergy</h3>
      <p class="mb-4 text-lg">
        Our integrated structure is our strength. G Productions, LLC (USA) spearheads global strategy and technology,
        while our dedicated Japanese entity, <a
          href="/ja/#company"
          class="text-blue-600 dark:text-blue-400 hover:underline font-medium">G Productions Japan 合同会社</a
        >, provides deep local market understanding and execution. This seamless collaboration delivers unparalleled
        value – global innovation tailored with local precision.
      </p>
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">Leadership & Vision</h3>
      <p class="text-lg">
        Led by founder Günther Brunner, our core US team collaborates with a curated network of global specialists. We
        are passionate about building bridges – connecting technologies, markets, and creative ideas to empower our
        clients worldwide.
      </p>
      <!-- Add Careers link/info if applicable -->
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gray-50 dark:bg-gray-800/50"></div>
    </Fragment>
  </Content>

  <!-- Optional: Client Logos/Testimonials Section (#clients) -->
  <!-- Add a Brands or Testimonials widget here if needed, e.g., <Brands logos={[...]} title="Trusted By Global Leaders"/> -->

  <!-- Contact Section (#contact) -->
  <Features2
    id="contact"
    title="Connect with Our Global Team"
    tagline="Reach out to G Productions, LLC (USA)"
    columns={2}
    items={[
      {
        title: 'USA Headquarters (Global Inquiries)',
        description: `<strong class="text-lg">G Productions, LLC</strong><br />
        30 N Gould St Ste N<br />
        Sheridan, WY 82801 USA<br />
        <br />
        <strong>Phone:</strong> <a href="tel:+13072919547" class="hover:underline">+1 (307) 291-9547</a><br />
        <strong>Email:</strong> <a href="mailto:contact@g-productions.studio" class="hover:underline">contact@g-productions.studio</a><br /><br />
        <hr class="my-2 border-gray-300 dark:border-gray-600"/>
        For inquiries specific to the Japanese market, please contact our <a href="/ja#contact" class="text-blue-600 dark:text-blue-400 hover:underline font-medium">Japan Office (日本)</a>.`,
        icon: 'tabler:building-skyscraper',
      },
      {
        title: 'Office Location',
        description:
          '<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2831.167703411779!2d-106.9549504!3d44.797770799999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5335fabc2a66677f%3A0x8f85bd068d1afb8a!2s30%20N%20Gould%20St%2C%20Sheridan%2C%20WY%2082801%2C%20USA!5e0!3m2!1sen!2sjp!4v1718789512794!5m2!1sen!2sjp" width="100%" height="300px" style="border:0; border-radius: 8px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>',
        icon: 'tabler:map-pin',
      },
      // Consider adding a Contact Form component here if desired
    ]}
  />

  <!-- Final CTA -->
  <CallToAction
    title="Ready to Innovate on a Global Scale?"
    subtitle="Let's explore how our AI expertise and technology solutions can propel your international business forward."
    actions={[
      {
        variant: 'primary',
        text: 'Start the Conversation',
        href: 'mailto:contact@g-productions.studio',
        icon: 'tabler:send',
      },
    ]}
  />
</Layout>
