---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import SectionDivider from '~/components/ui/SectionDivider.astro';

const metadata = {
  title: 'G Productions: Global AI Innovation Studio | AI, Software & Global Services',
  description:
    'G Productions, LLC (USA) is a premier AI innovation studio delivering cutting-edge AI solutions, bespoke software development, and expert global services worldwide. Drive your business forward.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '/en#home' },
        { text: 'Services', href: '/en#services' },
        { text: 'Why Us', href: '/en#why-us' },
        { text: 'Portfolio', href: '/en#portfolio' },
        { text: 'About', href: '/en#about' },
        { text: 'Contact', href: '/en#contact' },
      ]}
      actions={[
        {
          text: '日本 (Japan)',
          href: '/ja',
          target: '_self',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Section -->
  <Hero
    id="home"
    title="G Productions"
    tagline="AI Innovation Studio"
    image={{
      src: '~/assets/images/hero-1.png',
      alt: 'G Productions, LLC - Global AI Innovation',
    }}
    actions={[
      {
        variant: 'primary',
        text: 'Explore Solutions',
        href: '/en#services',
        icon: 'tabler:arrow-right',
      },
      {
        variant: 'secondary',
        text: 'Get In Touch',
        href: '/en#contact',
      },
    ]}
  >
    <Fragment slot="subtitle">
      We architect possibility at the intersection of AI and human creativity. 
      <span class="font-semibold text-ink dark:text-white">G Productions</span> combines 
      cutting-edge technology with design thinking to solve complex challenges across borders.
    </Fragment>
  </Hero>

  <!-- Services Section -->
  <Features2
    id="services"
    title="Our Capabilities"
    subtitle="We blend advanced technology with creative vision to deliver transformative solutions"
    columns={3}
    variant="bento"
    items={[
      {
        title: 'AI Solutions & Consulting',
        description: 'Custom AI agents that understand your business context. We design intelligent workflows, strategic integrations, and generative systems that deliver measurable ROI.',
        icon: 'tabler:brain',
      },
      {
        title: 'Custom Software Engineering',
        description: 'Full-stack excellence from beautiful interfaces to scalable cloud architecture. We build SaaS platforms, conversational AI, and future-ready systems on modern infrastructure.',
        icon: 'tabler:code',
      },
      {
        title: 'Global Business Services',
        description: 'Cross-cultural expertise bridging Japan and the West. Nuanced JP⇄EN translation, market entry strategy, and cultural consulting that captures intent, not just words.',
        icon: 'tabler:world-share',
      },
      {
        title: 'Creative Technology Events',
        description: 'Hybrid experiences that connect. AI-enhanced events, tech community building, and global audience design using our proven Gathr.ly methodology.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'G Combinator Accelerator',
        description: 'US/Japan entity formation, YC application support, and investment advisory. Complete startup launch services with full translation and compliance support.',
        icon: 'tabler:rocket',
        callToAction: {
          text: 'Learn More',
          href: '/g-combinator',
          variant: 'link',
        },
      },
    ]}
  />

  <SectionDivider variant="diagonal" color="fill-surface-alt dark:fill-zinc-800/50" />

  <!-- Why Choose Us Section -->
  <Content
    id="why-us"
    title="Why Partner with G Productions?"
    tagline="Our Edge"
    image={{
      src: '~/assets/images/i543726b09799.jpg',
      alt: 'G Productions Advantage',
    }}
  >
    <Fragment slot="content">
      <div class="space-y-6">
        <div class="flex gap-4 items-start">
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center">
            <span class="text-accent text-lg">01</span>
          </div>
          <div>
            <h4 class="font-heading font-semibold text-lg text-ink dark:text-white mb-1">Human-Centered Technology</h4>
            <p class="text-ink-secondary dark:text-zinc-400">Every solution starts with understanding the people who will use it. Our AI feels intuitive and genuinely helpful, never frustrating.</p>
          </div>
        </div>

        <div class="flex gap-4 items-start">
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center">
            <span class="text-accent text-lg">02</span>
          </div>
          <div>
            <h4 class="font-heading font-semibold text-lg text-ink dark:text-white mb-1">Cross-Cultural Intelligence</h4>
            <p class="text-ink-secondary dark:text-zinc-400">Deep expertise in both Western and Japanese business cultures. We translate concepts and intentions, not just words.</p>
          </div>
        </div>

        <div class="flex gap-4 items-start">
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center">
            <span class="text-accent text-lg">03</span>
          </div>
          <div>
            <h4 class="font-heading font-semibold text-lg text-ink dark:text-white mb-1">Creative AI Advantage</h4>
            <p class="text-ink-secondary dark:text-zinc-400">Technical excellence meets creative vision. We craft AI solutions that surprise and delight while delivering measurable outcomes.</p>
          </div>
        </div>

        <div class="flex gap-4 items-start">
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center">
            <span class="text-accent text-lg">04</span>
          </div>
          <div>
            <h4 class="font-heading font-semibold text-lg text-ink dark:text-white mb-1">Global-Local Presence</h4>
            <p class="text-ink-secondary dark:text-zinc-400">
              US headquarters with <a href="/ja/#company" class="text-accent hover:underline">G Productions Japan</a> in Tokyo. 
              International perspective with authentic local understanding.
            </p>
          </div>
        </div>
      </div>
    </Fragment>
  </Content>

  <SectionDivider variant="diagonal" flip color="fill-surface dark:fill-zinc-900" />

  <!-- Portfolio Section -->
  <Features
    id="portfolio"
    title="Our Work"
    subtitle="Innovation with purpose: projects that demonstrate our commitment to solving meaningful challenges"
    items={[
      {
        title: 'AI Code Agents Festival',
        description: 'A community movement connecting 200+ in-person attendees with 20,000+ online participants. Live coding, expert panels, and interactive AI workshops showcasing human potential.',
        icon: 'tabler:robot',
        callToAction: {
          text: 'Explore the Event',
          href: 'https://events.code-agents.com/2025-winter/',
          target: '_blank',
          variant: 'link',
        },
      },
      {
        title: 'Cross-Cultural Product Launch',
        description: 'Complete cultural adaptation for a US software company entering Japan. UI/UX redesign, localized marketing, and technical glossaries capturing nuanced terminology.',
        icon: 'tabler:language',
      },
      {
        title: 'Retail AI Agent',
        description: 'AI that creates genuine connections—understanding context, remembering preferences, communicating with brand personality. 60% automation with 23% satisfaction increase.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Healthcare Analytics Platform',
        description: 'HIPAA-compliant SaaS transforming patient data insights. Privacy-preserving AI models reducing diagnostic time by 35% in pilot deployments.',
        icon: 'tabler:heart-rate-monitor',
      },
    ]}
  />

  <!-- About Section -->
  <Content
    id="about"
    title="Our Story"
    tagline="Bridging Worlds"
    isReversed
    image={{
      src: '~/assets/images/office-02.jpeg',
      alt: 'G Productions, LLC - Global Operations',
    }}
  >
    <Fragment slot="content">
      <p class="text-lg text-ink-secondary dark:text-zinc-400 mb-6">
        G Productions was born from a simple realization: technology's greatest potential lies in 
        connecting people across geographical, cultural, and conceptual divides.
      </p>
      
      <p class="text-ink-secondary dark:text-zinc-400 mb-6">
        Founded in Wyoming by Günther Brunner, we've intentionally designed our structure to mirror 
        our philosophy—globally connected, locally authentic. Our US entity develops the broader 
        technology vision while <a href="/ja/#company" class="text-accent hover:underline">G Productions Japan</a> 
        brings deep cultural understanding to our work in Asia.
      </p>

      <blockquote class="border-l-2 border-accent pl-6 py-2 my-6 bg-surface-alt dark:bg-zinc-800/50 rounded-r-xl">
        <p class="text-ink dark:text-zinc-300 italic">
          "We're building a company that uses technology not just to solve problems, but to expand 
          what's possible for people and businesses across cultures."
        </p>
        <footer class="mt-2 text-sm font-semibold text-ink dark:text-white">— Günther Brunner, CEO & Founder</footer>
      </blockquote>
    </Fragment>
  </Content>

  <!-- Company Services Section -->
  <Features2
    id="company-services"
    title="Our Products"
    subtitle="AI-powered platforms and services we've built"
    columns={3}
    items={[
      {
        title: 'Gathr.ly',
        description: 'Hybrid event design combining human creativity with AI efficiency. From intimate gatherings to large-scale conferences.',
        icon: 'tabler:calendar-event',
        callToAction: {
          text: 'Visit Gathr.ly',
          href: 'https://gathr.ly',
          target: '_blank',
          variant: 'link',
        },
      },
      {
        title: 'AI Code Agents',
        description: 'Developer productivity through AI. Code generation, best practice recommendations, review automation, and documentation.',
        icon: 'tabler:code',
        callToAction: {
          text: 'Visit Code Agents',
          href: 'https://code-agents.com',
          target: '_blank',
          variant: 'link',
        },
      },
      {
        title: 'MCPVerified',
        description: 'Your trusted guide to the Model Context Protocol ecosystem. TypeScript-first, security-focused recommendations.',
        icon: 'tabler:shield-check',
        callToAction: {
          text: 'Visit MCPVerified',
          href: 'https://mcpverified.com/introduction',
          target: '_blank',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- Contact Section -->
  <CallToAction
    id="contact"
    title="Let's Create Something Extraordinary"
    subtitle="Every breakthrough begins with a conversation. We'd love to hear about your challenges and ideas."
    actions={[
      {
        variant: 'primary',
        text: 'Start the Conversation',
        href: 'mailto:contact@g-productions.studio',
        icon: 'tabler:send',
      },
    ]}
  >
    <Fragment slot="content">
      <div class="grid md:grid-cols-2 gap-8 mt-8 text-left max-w-2xl mx-auto">
        <div class="bg-surface-alt dark:bg-zinc-800/50 rounded-xl p-6">
          <h4 class="font-heading font-semibold text-ink dark:text-white mb-3">US Headquarters</h4>
          <p class="text-sm text-ink-secondary dark:text-zinc-400 mb-2">
            30 N Gould St Ste N<br />
            Sheridan, WY 82801 USA
          </p>
          <p class="text-sm">
            <a href="tel:+13072919547" class="text-accent hover:underline">+1 (307) 291-9547</a>
          </p>
        </div>
        
        <div class="bg-surface-alt dark:bg-zinc-800/50 rounded-xl p-6">
          <h4 class="font-heading font-semibold text-ink dark:text-white mb-3">Japan Office</h4>
          <p class="text-sm text-ink-secondary dark:text-zinc-400 mb-2">
            For Japanese market inquiries, please visit our 
            <a href="/ja#contact" class="text-accent hover:underline">Japan page</a>.
          </p>
        </div>
      </div>
      
      <p class="text-center text-sm text-ink-tertiary dark:text-zinc-500 mt-6">
        We respond to all inquiries within 24 hours.
      </p>
    </Fragment>
  </CallToAction>
</Layout>
