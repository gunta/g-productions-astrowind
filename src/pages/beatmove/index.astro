    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const header = document.querySelector('header');
        const pageOverlay = document.getElementById('pageOverlay');
        const parallaxSections = document.querySelectorAll('.parallax');
        let lastScrollY = window.scrollY;

        // Intersection Observer for fade-in and scale-in animations
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.remove('opacity-0', 'scale-95');
                entry.target.classList.add('opacity-100', 'scale-100');
              }
            });
          },
          { threshold: 0.1 }
        );

        document.querySelectorAll('#hero-text, #vision-title, #vision-text').forEach((el) => {
          observer.observe(el);
        });

        // Parallax effect
        function updateParallax() {
          parallaxSections.forEach((section) => {
            // Cast section to HTMLElement to access offsetTop
            const htmlSection = section as HTMLElement;
            const distance = window.pageYOffset - htmlSection.offsetTop;
            // Cast querySelector result to HTMLElement to access style
            const parallaxBg = htmlSection.querySelector('.parallax::before') as HTMLElement | null;
            if (parallaxBg) {
              // Correct template literal syntax
              parallaxBg.style.transform = `translateY(${distance * 0.5}px)`;
            }
          });
        }

        window.addEventListener('scroll', () => {
          window.requestAnimationFrame(updateParallax);

          // Header and overlay logic
          if (header && pageOverlay) {
            if (lastScrollY < window.scrollY) {
              header.style.transform = 'translateY(-100%)';
            } else {
              header.style.transform = 'translateY(0)';
            }

            const scrollPercentage = Math.min(
              window.scrollY / (document.documentElement.scrollHeight - window.innerHeight),
              1
            );
            pageOverlay.style.opacity = (scrollPercentage * 0.7).toFixed(2);

            lastScrollY = window.scrollY;
          }
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
              behavior: 'smooth',
            });
          });
        });
      });
    </script>
